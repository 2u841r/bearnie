---
import { AstroSeo } from "@astrolib/seo";
// Foundations
import BaseLayout from "@/layouts/BaseLayout.astro";

import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import { siteConfig } from "@/config/site";
const canonical = `${siteConfig.url}${Astro.url.pathname}`;
---

<AstroSeo
  title="Sponsors | Bearnie"
  description="Thank you to all our sponsors who support Bearnie development."
  canonical={canonical}
  openGraph={{
    url: canonical,
    title: "Sponsors | Bearnie",
    description:
      "Thank you to all our sponsors who support Bearnie development.",
    site_name: siteConfig.name,
    type: "website",
    locale: "en_US",
    images: [
      {
        url: siteConfig.ogImage,
        width: 1200,
        height: 630,
        alt: "Bearnie Sponsors",
        type: "image/jpeg",
      },
    ],
  }}
  twitter={{
    cardType: "summary_large_image",
    site: siteConfig.author.twitter,
    handle: siteConfig.author.twitter,
  }}
/>
<BaseLayout
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    name: "Sponsors | Bearnie",
    description:
      "Thank you to all our sponsors who support Bearnie development.",
    url: canonical,
    isPartOf: {
      "@type": "WebSite",
      name: siteConfig.name,
      url: siteConfig.url,
    },
  }}
>
  <section>
    <Wrapper
      class="standard"
      class="py-12 lg:h-[calc(100vh-11.5rem)] flex flex-col justify-center"
    >
      <!-- Header -->
      <div class="max-w-sm text-pretty text-center mx-auto">
        <Text tag="h1" variant="textLG" class="font-medium tracking-tight">
          Sponsors
        </Text>
        <Text tag="p" variant="textBase" class="text-muted-foreground mt-4">
          Bearnie is open source and free to use. A huge thank you to everyone
          who supports this project.
        </Text>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
